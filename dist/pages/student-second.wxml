
    <view class="cu-card">
        <view class="cu-item shadow radius">
            <view class="flex align-center">
                <image class="cu-avatar round margin lg" src="{{ student.Sicon?imgUrl + student.Sicon:'' }}" background-size="cover"/>
                <view class="margin">
                    <view class="text-black text-xl text-bold">{{ student.Snickname }}</view>
                </view>        
            </view>
            
            <view class="flex padding">
                <view class="flex-sub margin-tb text-black text-lg">年级：{{ student.SgradeName }}</view>
                <view class="flex-sub margin-tb text-black text-lg">校区：{{ student.Cname }}</view>
            </view>
        </view>
        
        <view class="cu-item margin-top-xl margin-bottom-xl">
            <view class="cu-list menu card-menuradius shadow">
                <view class="cu-item arrow">
                    <view class="content" data-url="todaygrade" bindtap="onClick">
                        <view>今日习题成绩</view>
                    </view>
                </view>
                <view class="cu-item arrow">
                    <view class="content" data-url="wrongproblem" bindtap="onClick">
                        <view>错题整理</view>
                    </view>
                </view>
                <view class="cu-item arrow">
                    <view class="content" data-url="learnsituation" bindtap="onClick">
                        <view>学情统计</view>
                    </view>
                </view>
            </view>
        </view>
        
    </view>